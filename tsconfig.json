{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "sandbox"]
}
