{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
